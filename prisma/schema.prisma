// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model beach {
  id           String         @id @default(uuid())
  name         String         @unique
  position     String
  lat          Float
  lng          Float
  championship championship[]
  createdAt    DateTime       @default(now())
}

model championship {
  id         String   @id @default(uuid())
  name       String   @unique
  status     String
  event_date DateTime
  beach      beach    @relation(fields: [beach_id], references: [id])
  beach_id   String
  createdAt  DateTime @default(now())
}
